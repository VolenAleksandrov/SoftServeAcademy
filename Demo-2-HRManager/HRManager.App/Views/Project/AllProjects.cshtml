@model IEnumerable<HRManager.Models.ViewModels.Project.ProjectVm>

@{
    ViewBag.Title = "AllProjects";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>AllProjects</h2>

<p>
    @Html.ActionLink("Create New", "CreateProject")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TeamLead)
        </th>
        <th>
            Actions
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TeamLead)
        </td>
        <td>
            
            @Html.ActionLink("Edit", "EditProject", new {id = item.Id}) 
            <!--|
            @Html.ActionLink("Details", "Details", new {id = item.Id}) |
            @Html.ActionLink("Delete", "Delete", new {id = item.Id})
                //-->
        </td>
    </tr>
}

</table>
